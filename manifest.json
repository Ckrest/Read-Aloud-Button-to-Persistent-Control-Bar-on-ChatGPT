{
  "manifest_version": 3,
  "name": "Read Aloud Button for ChatGPT",
  "version": "1.0",
  "description": "Adds a persistent Read Aloud button to ChatGPT's bottom toolbar for easy access to text-to-speech.",
  "icons": {
  "16": "icons/logo_16.png",
  "32": "icons/logo_32.png",
  "48": "icons/logo_48.png",
  "128": "icons/logo_128.png"
  },
  "action": {
    "default_title": "Read Aloud Button to Persistent Control Bar",
    "default_icon": {
      "16": "icons/logo_16.png",
      "32": "icons/logo_32.png",
      "48": "icons/logo_48.png",
      "128": "icons/logo_128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*","https://chatgpt.com/*"],
      "js": ["content-simple.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ]
}